[{sigscale_im,
      [{tls_key, "%CERT_DIR%/key.pem"},
      {tls_cert, "%CERT_DIR%/cert.pem"},
      {tls_cacert, "%CERT_DIR%/CAcert.pem"},
      {oauth_key, "%CERT_DIR%/pub.pem"}]},
{inets,
      [{services,
         [{httpd,
            [{server_name, "ct_rest"},
               {directory_index, ["index.html"]},
               {directory, {"/",
                     [{auth_type, mnesia},
                     {auth_name, "snmp.sigscale.org"},
                     {require_group, ["all"]}]}},
               {directory, {"/partyRoleManagement", []}},
               {modules, [mod_alias,
                  mod_auth,
                  mod_responsecontrol,
                  mod_im_rest_accepted_content,
                  mod_im_rest_post,
                  mod_im_rest_get,
						mod_im_rest_patch,
                  mod_im_rest_delete,
                  mod_get,
                  mod_disk_log]},
               {port, %HTTP_PORT%},
               {socket_type, {essl,
                     [{certfile, "%CERT_DIR%/cert.pem"},
                     {keyfile, "%CERT_DIR%/key.pem"}]}},
               {server_root, "%SERVER_ROOT%"},
               {document_root, "%APP_PRIV%/www"}]}]}]}].

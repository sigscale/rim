{
	"$id": "http://sigscale.org/schema/EP_RxSpec",
	"title": "5GC EP Rx Specification",
	"description": "5G Core End Point of Rx interface (between PCF and AF) connection point specification",
	"type": "object",
	"allOf": [
		{
			"$ref": "resourceCatalogManagement#/definitions/ResourceFunctionSpecification"
		},
		{
			"type": "object",
			"properties": {
				"resourceSpecCharacteristic": {
					"type": "array",
					"items": {
						"allOf": [
							{
								"$ref": "resourceCatalogManagement#/definitions/ResourceSpecificationCharacteristic"
							},
							{
								"type": "object",
								"required": [
									"name"
								],
								"properties": {
									"name": {
										"enum": [
											"id",
											"userLabel",
											"farEndEntity",
											"localAddress",
											"remoteAddress"
										]
									}
								}
							}
						]
					}
				}
			}
		}
	]
}

{
	"$id": "http://sigscale.org/schema/MobileEdgeApplicationSpec",
	"title": "MEC MobileEdgeApplication Specification",
	"description": "MEC Mobile Edge Application resource function specification",
	"type": "object",
	"allOf": [
		{
			"$ref": "ResourceFunctionSpec"
		},
		{
			"type": "object",
			"properties": {
				"resourceSpecCharacteristic": {
					"type": "array",
					"items": {
						"allOf": [
							{
								"$ref": "resourceCatalogManagement#/definitions/ResourceSpecCharacteristic"
							},
							{
								"type": "object",
								"required": [
									"name"
								],
								"properties": {
									"name": {
										"enum": [
											"id",
											"appDId",
											"appName",
											"appProvider",
											"appSoftVersion",
											"appDVersion",
											"appInfoName",
											"appDescription",
											"appState",
											"instantiationState",
											"operationalState",
											"appInstanceId"
										]
									}
								}
							}
						]
					}
				}
			}
		}
	]
}

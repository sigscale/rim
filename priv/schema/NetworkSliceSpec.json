{
	"$id": "http://sigscale.org/schema/NetworkSliceSpec",
	"title": "5GC Network Slice Specification",
	"description": "5G Core (5GC) Network Slice resource function specification",
	"type": "object",
	"allOf": [
		{
			"$ref": "resourceCatalogManagement#/definitions/ResourceFunctionSpecification"
		},
		{
			"type": "object",
			"properties": {
				"resourceSpecCharacteristic": {
					"items": {
						"allOf": [
							{
								"$ref": "resourceCatalogManagement#/definitions/ResourceSpecificationCharacteristic"
							},
							{
								"type": "object",
								"required": [
									"name"
								],
								"properties": {
									"name": {
										"enum": [
											"id",
											"dnPrefix",
											"userLabel",
											"userDefinedNetworkType",
											"setOfMcc",
											"nSSIId",
											"operationalState",
											"administrativeState",
											"serviceProfileList"
										]
									}
								}
							}
						]
					}
				}
			}
		}
	]
}

{
	"$id": "http://sigscale.org/schema/ResourceFunctionSpecification",
	"title": "Resource Function Specification",
	"description": "Specifies a function as a behaviour to transform inputs of any nature into outputs of any nature independently from the way it is provided.",
	"type": "object",
	"allOf": [
		{
			"$ref": "resourceCatalogManagement#/definitions/ResourceSpecification"
		},
		{
			"type": "object",
			"properties": {
				"@baseType": {
					"pattern": "^LogicalResourceSpec$"
				},
				"sap": {
					"type": "array",
					"items": [
						{
							"$ref": "#/definitions/SapRef"
						}
					]
				}
			}
		}
	],
	"definitions": {
		"SapRef": {
			"type": "object",
			"title": "SAP Reference",
			"description": "Service Access Point (SAP) reference",
			"properties": {
				"id": {
					"type": "string"
				},
				"href": {
					"type": "string"
				}
			},
			"required": [
				"id",
				"href"
			]
		}
	}
}
